units       metal
atom_style  atomic
boundary    p p p
box         tilt large
read_data   Si.lammps
pair_style  tersoff
pair_coeff  * * Si.tersoff Si
mass        1 28.0855
replicate   3 3 3
fix         1 all box/relax iso 0.0 vmax 0.001 fixedpoint 0 0 0
minimize    1e-6 1e-10 100000 1000000
write_data  Si_relax.lammps
unfix       1
velocity    all create 2000.0 4928459 dist gaussian
fix         1 all nvt temp 2000.0 2000.0 10.0
timestep    0.001
run         100000
dump        mydump  all custom 100  wr_dump.lammpstrj id type x y z
dump        mydump2 all custom 100 uwr_dump.lammpstrj id type xu yu zu
run         100000
